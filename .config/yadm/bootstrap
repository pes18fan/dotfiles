#!/bin/env python

import os
import sys
import platform
import subprocess

system = platform.system()
script_dir = os.path.dirname(os.path.abspath(__file__))


def main():
    if system == "Linux":  # meant for WSL
        subprocess.run(["bash", f"{script_dir}/linux.sh"])
    elif system == "Windows":
        subprocess.run(["powershell.exe", f"{script_dir}\windows.ps1"])


if __name__ == "__main__":
    main()
